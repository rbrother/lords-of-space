<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:rb="clr-namespace:Net.Brotherus;assembly=LordsOfSpace,PublicKeyToken=b402b1ffe40d567b"
    Title="BattleCalculator" Height="200" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <GroupBox Grid.Column="0" Grid.Row="1" Header="Attacker">
            <FrameworkElement Name="Attacker" Tag="gui/RaceProperties.xaml"/>
        </GroupBox>
        <GroupBox Grid.Column="1" Grid.Row="1" Header="Defender">
            <FrameworkElement Name="Defender" Tag="gui/RaceProperties.xaml"/>
        </GroupBox>
        <Button Grid.Row="2">Fight!</Button>
    </Grid>
</Window>
